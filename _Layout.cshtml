@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Link to your custom CSS file -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top py-3">
        <div class="container " >
            <a class="navbar-brand" href="/"  >
                <span class="text-white" >Bet</span><span class="text-pink">husile</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Home Icon -->
                    <li class="nav-item">
                        <a class="nav-link active" href="/"><i class="fas fa-home text-pink"></i></a>
                    </li>
                    <!-- About Me Text -->
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About Me</a>
                    </li>
                    <!-- My Journey Text -->
                    <li class="nav-item">
                        <a class="nav-link" href="#my-journey">My Journey</a>
                    </li>
                    <!-- Projects Text -->
                    <li class="nav-item">
                        <a class="nav-link" href="#projects">Projects</a>
                    </li>
                    <!-- Contact Text -->
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <!-- LinkedIn Icon -->
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.linkedin.com/in/bethusile-m-1996a289/" target="_blank"><i class="fab fa-linkedin text-pink"></i></a>
                    </li>
                    <!-- GitHub Icon -->
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/Bethusile" target="_blank"><i class="fab fa-github text-pink"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>




    <!-- Hero Section -->
    <section id="home" class="vh-100 d-flex align-items-center text-center bg-dark text-white position-relative">
        <!-- Image Background -->
        <div id="hero-image" class="position-absolute w-100 h-100 object-fit-cover" style="background: url('images/bg1.jpg') center center / cover no-repeat;"></div>


        <!-- Dark Overlay -->
        <div class="overlay position-absolute w-100 h-100 bg-dark opacity-75"></div>

        <!-- Content -->
        <div class="container position-relative z-index-2">
            <h1 class="display-3">Bethusile Mafumana</h1>
            <p class="lead mt-3">Aspiring Full-Stack Developer | Cloud Engineer | Tech Enthusiast</p>
            <a href="#about" class="btn btn-pink mt-4 text-white">Learn More</a>
        </div>
    </section>

    <!-- Main content -->
    <div class="container-fluid my-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2025 My Portfolio. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap Bundle (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
